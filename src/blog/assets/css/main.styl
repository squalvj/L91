*,*:before,*:after
   box-sizing border-box

@font-face
	font-family Inconsolata
	src url(../fonts/Inconsolata.otf)
	font-style normal

@font-face
	font-family MaisonB
	src url(../fonts/MaisonNeue-Bold.ttf)
	font-style bold


$blackDope = #4c4c4c
$grey = #a39d9e
$borderColor = rgba(0,0,0,.2)
$inconsolata = 'Inconsolata',monospace
$maison = 'MaisonB', Helvetica
$magenta = magenta;
$cyan = cyan;

// BASE

body
    margin 0;
    &.bg-pattern
        background-image: linear-gradient(transparent 0px, transparent 1.26493px, rgb(255, 255, 255) 1.26493px, rgb(255, 255, 255) 12.6493px), linear-gradient(to right, rgb(200, 195, 199) 0px, rgb(200, 195, 199) 1.26493px, rgb(255, 255, 255) 1.26493px, rgb(255, 255, 255) 12.6493px);
        background-position: 69.3526px 20.0521px;
        background-size: 12.6493px 12.6493px;
        font-family $maison
        font-size 14px

h2,h1
    font-family: $maison
    margin 0

p
    margin 0

a
    text-decoration: underline
    color $blackDope

.container
    max-width: 1200px;
    padding-left 30px
    padding-right 30px
    margin-left auto
    margin-right auto
    &.article
        padding-left 60px;
        padding-right 60px;

.icon
    width 21px
    height auto


// HEADER----------------

.logo
    width: 147px
    height auto;

#header
    position relative
    > .container
        border: 1px solid $borderColor;
        border-top none
        position relative

.wrapper-header
    padding 40px 0
    display: flex
    justify-content: space-between
    align-content: center

.wrapper-header-section
    h2
        font-family : Inconsolata;
        font-size : 26px;
        line-height : 24px;
        letter-spacing : 2.4px;
        vertical-align : super;
        color : $blackDope
        text-decoration : underline;

// ----------------HEADER

// SIDE BAR-----------

.content-blog
    display flex;
    padding-left 0
    padding-right 0
    border-left 1px solid $borderColor
    border-right 1px solid $borderColor
    flex-grow 1
    transition all .30s ease
    &.geser
        transform translateX(100vw)
        transition all .30s ease .40s

.wrapper-side-bar
    width 220px
    padding-top 30px
    border-right 1px solid $borderColor
    position relative

    > .container
        height 100%

.wrapper-inside-side-bar
    height 100%
    display: flex
    flex-direction: column

.list-article
    list-style-type none
    padding 0
    margin 0
    flex-grow 0
    li
        font-family : $inconsolata;
        font-size : 14px;
        line-height : 14px;
        letter-spacing : 0.7px; 
        color $grey
        margin-bottom 25px
        &:last-child
            margin-bottom: 0
        &:hover
            cursor pointer
        &.active
            color black

.wrapper-pagination
    display: flex
    justify-content: space-between
    margin-top 30px
    flex-grow 1
    .indicator-pagination
        font-family : $inconsolata;
        font-size : 16px;
        line-height : 14px;
        letter-spacing : 0.7px;
        color $blackDope
    .left,.right
        &:hover
            cursor pointer
    
.wrapper-credit
    flex-grow 10
    display: flex
    align-items: flex-end
    padding-bottom 30px
    font-family : $inconsolata;
    font-size : 11px;
    line-height : 14px;
    letter-spacing : 0.55px;
    color $grey
    padding-top 30px
// -----------SIDE BAR

// CONTENT------------

.wrapper-content-article
    padding 30px 60px
    flex-grow 10
    max-width calc(100% - 220px)

.wrapper-share
    a
        text-decoration: none

.wrapper-date
    display flex 
    align-items: center
    > img
        width 20px
    > span
        font-family : $inconsolata;
        font-size : 14px;
        line-height : 24px;
        letter-spacing : 0.7px;
        color : $grey;
        margin-left 10px

.wrapper-article-extra
    margin 10px 0 40px

.wrapper-share
    margin 15px 0 0
    img
        margin-right 5px

article
    .title
        font-family : $maison;
        font-weight : bold;
        font-size : 48px;
        letter-spacing : 2.4px;
        color : $blackDope
    .wrapper-the-article
        > p
            font-family : $inconsolata;
            font-size : 14px;
            line-height : 24px;
            letter-spacing : 0.7px;
            color : #4C4C4C;
            margin-bottom 15px

.wrapper-creator
    margin-top 70px
    p
        font-family : $inconsolata;
        font-size : 12px;
        line-height : 24px;
        letter-spacing : 0.7px;
        color : $grey;
        text-decoration: none
        display flex
        align-items: center
        justify-content: flex-end
        a
            color inherit
    img
        width 18px
        margin 0 7px

.wrapper-back-article
    display: none

// ------------CONTENT

@media (max-width: 600px)

    .container
        padding-left 30px
        padding-right 30px

    .content-blog
        border-left none
    body
        max-width: 100vw
        overflow-x hidden

    .wrapper-header
        padding 40px 0 30px

    .wrapper-side-bar
        position fixed
        left -100vw
        top 0
        width 100vw
        height calc(100vh - 107px)
        border none

    .wrapper-content-article
        max-width: unset
        padding-left 0
        padding-right 0

    .wrapper-back-article
        display: block
        margin-bottom 30px
        p
            display inline-flex
            align-items: center
            text-decoration none
        img
            width 27px
            height auto
            margin-right 7px
        span
            font-family : $inconsolata;
            font-size : 14px;
            line-height : 24px;
            letter-spacing : 0.7px;
            color : $grey;

    .list-article
        li
            margin-bottom 15px
    .wrapper-pagination
        width 40%
        img
            width 15px
        span
            font-size 14px
    #header
        > .container
            border-top none
            border-left none
            border-right none
    .wrapper-header-section
        padding-top 10px
        h2
            font-size 22px

@media(max-width: 600px) and (max-height: 570px)
    .wrapper-side-bar
        height calc(130vh - 106px)
    .geser
        .wrapper-content-article
            max-height calc(130vh - 106px)
            overflow hidden