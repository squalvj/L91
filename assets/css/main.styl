@font-face
   font-family kievM
   src url(../fonts/kiev-medium.otf)
   font-style normal

@font-face
   font-size lucidaB
   src url(../fonts/LucidaGrande.woff)
   font-style normal

*,*:before,*:after
   box-sizing border-box

$putih = #f5f6fa
$hitam = rgba(0,0,0,.7)
$algreya = 'Alegreya Sans SC', sans-serif;
$roboto = 'Roboto', sans-serif;
$magenta = magenta;
$cyan = cyan;

// BASE

body
   margin 0
   &.bg-pattern
      background-image: linear-gradient(transparent 0px, transparent 1.26493px, rgb(255, 255, 255) 1.26493px, rgb(255, 255, 255) 12.6493px), linear-gradient(to right, rgb(200, 195, 199) 0px, rgb(200, 195, 199) 1.26493px, rgb(255, 255, 255) 1.26493px, rgb(255, 255, 255) 12.6493px);
      background-position: 69.3526px 20.0521px;
      background-size: 12.6493px 12.6493px;
   &#body-homepage
      position relative
a
   color black

// ---BASE

._flex
   display flex

._flex-wrap
   flex-wrap wrap

._just-btwn
   justify-content: space-between

._just-center
   justify-content: center

.col-1
   width 10%
   flex 1 1 auto

.col-2
   width 20%
   flex 1 1 auto

.col-3
   width 30%
   flex 1 1 auto

.col-4
   width 40%
   flex 1 1 auto

.col-5
   width 50%
   flex 1 1 auto

.container
   max-width 1360px
   padding-left 30px
   padding-right 30px
   margin-left auto
   margin-right auto

// HEADER
header
   margin-top 20px
.wrapper-header
   ul
      list-style: none
.wrapper-logo
   position absolute
   left 50%
   transform translateX(-50%)
   display flex
   align-items: center
   height 100%;
   >  a
      align-items: center
      display flex

   img
      width 200px;
      height auto;
   
// HOME
.wrapper-home
   display flex
   align-items: center
   height 100vh
   justify-content: center
   padding 80px
div#home-text
   position relative;
   margin auto; 
   padding 100px 30px
   z-index 2;
   width 100%
   font-family Inconsolata, monospace;
   margin 0 auto
   //min-height calc(100vh - 120px)
   div#box
      position absolute; top 0; left 0;
      width 100%; height 100%;
      border 1px solid #000;

      .power-text
         position: absolute
         top 30px
         right 30px
      
      .blog-text
         position absolute
         bottom 30px
         right 30px

      &:before, &:after
         content '';
         position absolute; top 0; left 0;
         width 100%; height 100%;
         box-shadow inset 0px 0px 0px 1px #000;
         mix-blend-mode: multiply;
         animation dance 2s infinite steps(1);
         pointer-events: none
      
      &:before
         clip-path: polygon(0 0, 65% 0, 35% 100%, 0 100%)
         box-shadow inset 0px 0px 0px 1px currentColor;
         color $magenta;
      
      &:after
         clip-path: polygon(65% 0, 100% 0, 100% 100%, 35% 100%);
         animation-duration: 0.5s;
         animation-direction: alternate;
         box-shadow inset 0px 0px 0px 1px currentColor;
         color $cyan;
      
   h3
      position relative;
      font-size: 130px; 
      font-weight: 700;
      text-transform uppercase;
      animation: blink 1.3s infinite steps(1);
      margin 0 0 50px
   
      &:before, &:after
         content 'Front-end Developer';
         position absolute; top -1px; left 0;
         mix-blend-mode: soft-light;
         animation dance 2s infinite steps(2);
      
      &:before
         clip-path: polygon(0 0, 100% 0, 100% 50%, 0 50%)
         color: $magenta;
         animation: shiftright 2s steps(2) infinite;
      &:after
         clip-path: polygon(0 100%, 100% 100%, 100% 50%, 0 50%)
         color: $cyan;
         animation: shiftleft 2s steps(2) infinite;
    
   p
      position relative
      margin-bottom 8px;
   
      span
         position relative;
         display inline-block;
         font-weight: bold;
         color: #000;
         animation blink 3s steps(1) infinite;
      
         &:before, &:after
            content 'squalvj@gmail.com';
            position absolute;
            top -1px; left 0;
            mix-blend-mode multiply;
         
         &:before
            clip-path: polygon(0 0, 100% 0, 100% 50%, 0 50%)
            color: $magenta;
            animation: shiftright 1.5s steps(2) infinite;
         &:after
            clip-path: polygon(0 100%, 100% 100%, 100% 50%, 0 50%)
            color: $cyan;
            animation: shiftleft 1.7s steps(2) infinite;

   p.level-91
      span
         position relative;
         display inline-block;
         font-weight: bold;
         color: #000;
         animation blink 2s steps(1) infinite;
      
         &:before, &:after
            content 'level-91';
            position absolute;
            top -1px; left 0;
            mix-blend-mode multiply;
         
         &:before
            clip-path: polygon(0 0, 100% 0, 100% 50%, 0 50%)
            color: $magenta;
            animation: shiftright 1.5s steps(5) infinite;
         &:after
            clip-path: polygon(0 100%, 100% 100%, 100% 50%, 0 50%)
            color: $cyan;
            animation: shiftleft 1.7s steps(2) infinite;

canvas
   position absolute
   left 0
   top 0
   pointer-events: none
        
@keyframes dance
   0%, 84%, 94%
      transform skew(0deg);
   85%
      transform skew(5deg);
   90%
      transform skew(-5deg);
   98%
      transform skew(3deg);

@keyframes shiftleft
   0%, 87%, 100%
      transform translate(0,0) skew(0deg);
   84%, 90%
      transform translate(-8px,0) skew(20deg);

@keyframes shiftright
   0%, 87%, 100%
      transform translate(0,0) skew(0deg);
   84%, 90%
      transform translate(8px,0) skew(20deg);

@keyframes blink
   0%, 50%, 85%, 100%
      color #000;
   87%, 95%
      color transparent;
   
@media(max-width: 840px)
   div#home-text
      h3
         font-size 70px
      

@media(max-width: 576px)
   .power-text
      left 30px
      right unset
   .wrapper-home
      padding 30px
   div#home-text
      p
         line-height: 18px
      h3
         font-size 50px
         // &:before, &:after
         //    word-break break-word

@media(max-width: 350px)
   div#home-text
      h3
         font-size 40px
